<Window x:Class="poker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:poker"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Style x:Key="CardStyle" TargetType="Button">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Canvas Width="100" Height="150">
                            <Rectangle Width="100" Height="150" Fill="White" Stroke="Black" StrokeThickness="2" />
                            <TextBlock Text="{TemplateBinding Content}" FontSize="24" FontWeight="Bold" Canvas.Left="10" Canvas.Top="10"/>
                            <TextBlock Text="{TemplateBinding Tag}" FontSize="48" Canvas.Left="34" Canvas.Top="43"/>
                        </Canvas>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <DockPanel x:Name="CardsPanel">
        <Button Style="{StaticResource CardStyle}" Content="A" Tag="♠" />
        <Button Style="{StaticResource CardStyle}" Content="2" Tag="♥" />
    </DockPanel>
</Window>
